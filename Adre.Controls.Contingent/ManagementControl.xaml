<UserControl x:Class="Adre.Controls.Contingent.ManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Adre.Controls.Contingent"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Height="40">
            <Button Height="30" Padding="15,5" Margin="5,5,0,5">Add New</Button>
            <ComboBox Padding="15,5" Width="150" Margin="5" ></ComboBox>
        </StackPanel>
        <telerik:RadGridView Grid.Row="1" AutoGenerateColumns="False" Margin="5,0">
            <telerik:RadGridView.Columns>
                <telerik:GridViewColumn Header="Contingent"  />
                <telerik:GridViewColumn Header="Athletes"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
    </Grid>
</UserControl>
